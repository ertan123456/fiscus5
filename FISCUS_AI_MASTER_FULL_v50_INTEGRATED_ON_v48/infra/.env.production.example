# === Core ===
APP_ENV=production
API_BASE_URL=https://api.fiscus.ai
WEB_BASE_URL=https://app.fiscus.ai
JWT_SECRET=change_me_long_random
ENCRYPTION_KEY=change_me_32bytes

# === Database / Cache ===
DATABASE_URL=postgresql+psycopg2://user:pass@db-host:5432/fiscus
REDIS_URL=redis://redis-host:6379/0

# === Storage ===
S3_ENDPOINT=https://s3.amazonaws.com
S3_REGION=eu-central-1
S3_BUCKET=fiscus-prod-bucket
S3_PUBLIC_BASE_URL=https://cdn.fiscus.ai

# === Security / Telemetry ===
SENTRY_DSN=
ALLOW_IPS=
RATE_LIMIT_RPM=120
RATE_LIMIT_BURST=60

# === Payments ===
STRIPE_WEBHOOK_SECRET=
IYZICO_WEBHOOK_SECRET=

# === AV / CSP ===
AV_ENABLED=true
AV_REQUIRED=false
CLAMD_HOST=clamav
CLAMD_PORT=3310
CSP_REPORT_URI=https://api.fiscus.ai/csp-report
